<div class="container">
  
  <p id="notice"><%= notice %></p>
  
  <h1>Words</h1>
  
  <table class="table">
    <thead>
      <tr>
        <th>Word</th>
        <th>Definition</th>
        <th>Sentence</th>
        <th>Notes</th>
        <th>Tags</th>
        <th>Status</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @words.each do |word| %>
        <tr>
          <td><%= word.word %></td>
          <td><%= word.definition %></td>
          <td><%= word.sentence %></td>
          <td><%= word.notes %></td>
          <td><%= word.tags %></td>
          <td><%= word.status %></td>
          <td><%= link_to 'View', word, class: 'btn btn-info' %></td>
          <td><%= link_to 'Edit', edit_word_path(word), class: 'btn btn-warning' %></td>
          <td><%= link_to 'Delete', word, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <br>
  
  <%= link_to 'New Word', new_word_path, class: 'btn btn-primary' %>
  
</div>